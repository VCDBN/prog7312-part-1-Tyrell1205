<Window x:Class="Dewey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dewey"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

       
        <!-- Panel for additional buttons -->
        <StackPanel x:Name="additionalButtonsPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Opacity="0.9" Height="414" Width="800">
            <Button Content="Replacing books" Width="150" Height="30" Margin="10" Click="ReplacingBooks_Click"/>
            <Button Content="Identifying areas" Width="150" Height="30" Margin="10"  Click="IdentifyingAreas_Click"/>
            <Button Content="Finding call numbers" Width="150" Height="30" Margin="10" Click="Findcallnumbers_Click"/>
        </StackPanel>
    </Grid>
</Window>
